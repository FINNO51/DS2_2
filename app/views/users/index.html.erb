<p style="color: green"><%= notice %></p>

<h1>CLASIFICACIÓN</h1>

<div id="users">
<% index = 0%>
<% @array = @users.sort_by{|e| -e[:record]}%>
  <table>
  <tr>
    <th>Posición</th>  
    <th>Nombre</th>    
    <th>Record</th>
  </tr>
  <% @array.each do |user| %> 
  <% index += 1%>
  <tr>   
    <td><%= index %></td>
    <td><%= user.nombre %></td>
    <td><%= user.record %></td>
  </tr>
  <% end %>
  </table>
</div>

